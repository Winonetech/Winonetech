<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx">
	<!-- host component -->
	<fx:Metadata>
		[HostComponent("com.winonetech.controls.MultiPlayer")]
	</fx:Metadata>
	
	<!-- states -->
	<s:states>
		<s:State name="image" />
		<s:State name="video" />
		<s:State name="disabled" />
	</s:states>
	
	<s:Image id="imagePlayer" width="100%" height="100%" fillMode="scale" scaleMode="letterbox" includeIn="image"/>
	
	<s:VideoPlayer id="videoPlayer" width="100%" height="100%" scaleMode="letterbox" includeIn="video"/>
	
</s:Skin>
